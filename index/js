        },
      ],
      [
        {
          text: "–ù–∞–∑–∞–¥ –≤ –º–µ–Ω—é",
          callback_data: "back",
        },
      ],
    ],
  }),
};

const start = () => {
  bot.setMyCommands([
    { command: "/menu", description: "–ú–µ–Ω—é" },
    { command: "/info", description: "–û –Ω–∞—Å" },
  ]);

  bot.on("message", (msg) => {
    const text = msg.text;
    const chatId = msg.chat.id;

    if (text === "/start") {
      return bot.sendMessage(
        chatId,
        `–ü—Ä–∏–≤–µ—Ç—Å—Ç–≤—É—é –Ω–∞ –∫—É—Ä—Å–∞—Ö –ø–æ –∫–æ–Ω—Ç–µ–∫—Å—Ç–Ω–æ–π —Ä–µ–∫–ª–∞–º—ã –æ—Ç TheData! üòé`
      );
    }

    if (text === "/menu") {
      return bot.sendMessage(
        chatId,
        `–ù–∏–∂–µ –ø—Ä–µ–¥—Å—Ç–∞–≤–ª–µ–Ω–∞ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è: –æ –∫–æ–º–ø–∞–Ω–∏–∏, –Ω–∞—à–∏ –∫—É—Ä—Å—ã, –Ω–∞—à–∏ —Å–æ—Ü.—Å–µ—Ç–∏ üëáüëáüëá`,
        buttons
      );
    }

    if (text === "/info") {
      return bot.sendMessage(
        chatId,
        "–ú–∞—Å—Ç–µ—Ä–∏—Ç–µ –ø—Ä–∏–±—ã–ª—å–Ω—ã–µ —Ä–µ–∫–ª–∞–º–Ω—ã–µ –∫–∞–º–ø–∞–Ω–∏–∏ —Å –Ω–∞–º–∏! –° –±–æ–ª–µ–µ —á–µ–º 6-–ª–µ—Ç–Ω–∏–º –æ–ø—ã—Ç–æ–º —Ä–∞–±–æ—Ç—ã –≤ —Å—Ñ–µ—Ä–µ –∫–æ–Ω—Ç–µ–∫—Å—Ç–Ω–æ–π –∏ —Ç–∞—Ä–≥–µ—Ç–∏—Ä–æ–≤–∞–Ω–Ω–æ–π —Ä–µ–∫–ª–∞–º—ã, –º—ã –≥–æ—Ç–æ–≤—ã –ø–æ–¥–µ–ª–∏—Ç—å—Å—è —Å–≤–æ–∏–º–∏ –∑–Ω–∞–Ω–∏—è–º–∏ –∏ –ø–æ–º–æ—á—å –≤–∞–º —Å—Ç–∞—Ç—å —ç–∫—Å–ø–µ—Ä—Ç–æ–º. –ù–∞—à–∏ –æ–±—É—á–∞—é—â–∏–µ –º–∞—Ç–µ—Ä–∏–∞–ª—ã –∏ –ø—Ä–∞–∫—Ç–∏—á–µ—Å–∫–∏–µ –∑–∞–¥–∞–Ω–∏—è –ø–æ–º–æ–≥—É—Ç –≤–∞–º –æ—Å–≤–æ–∏—Ç—å –Ω–∞–≤—ã–∫–∏ —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è —Ä–µ–∫–ª–∞–º–Ω—ã–º–∏ –∫–∞–º–ø–∞–Ω–∏—è–º–∏ –≤ —Ç–∞–∫–∏—Ö –ø–ª–∞—Ç—Ñ–æ—Ä–º–∞—Ö, –∫–∞–∫ Google Ads, Google Analytics, YouTube, –Ø–Ω–¥–µ–∫—Å –ú–µ—Ç—Ä–∏–∫–∞. –ë—É–¥—å—Ç–µ –≥–æ—Ç–æ–≤—ã –≤–∑—è—Ç—å –Ω–∞ —Å–µ–±—è —Ä–æ–ª—å –º–∞—Å—Ç–µ—Ä–∞ —Ä–µ–∫–ª–∞–º—ã –∏ –¥–æ—Å—Ç–∏—á—å –≤–µ–ª–∏–∫–∏—Ö —Ä–µ–∑—É–ª—å—Ç–∞—Ç–æ–≤! –ü—Ä–∏—Å–æ–µ–¥–∏–Ω—è–π—Ç–µ—Å—å –∫ –Ω–∞–º —Å–µ–≥–æ–¥–Ω—è –∏ –æ—Ç–∫—Ä–æ–π—Ç–µ –¥–≤–µ—Ä–∏ –∫ —É—Å–ø–µ—Ö—É –≤ –≤–∞—à–∏—Ö —Ñ–∏–Ω–∞–Ω—Å–æ–≤—ã—Ö –¥–æ—Å—Ç–∏–∂–µ–Ω–∏—è—Ö üòè"
      );
    }

    return bot.sendMessage(chatId, "–Ø –≤–∞—Å –Ω–µ –ø–æ–Ω–∏–º–∞—é, –≤–æ—Å–ø–æ–ª—å–∑—É–π—Ç–µ—Å—å –º–µ–Ω—éüòï");
  });

  bot.on("callback_query", (msg) => {
    const data = msg.data;
    const chatId = msg.message.chat.id;

    if (data === "courses") {
      bot.sendMessage(chatId, "–í–æ—Ç —Å—Å—ã–ª–∫–∏ –Ω–∞ –Ω–∞—à–∏ –∫—É—Ä—Å—ã –ø–æ –∏–Ω—Ç–µ—Ä–Ω–µ—Ç-—Ä–µ–∫–ª–∞–º–µüî•");
      return bot.sendMessage(
        chatId,
        "–í—ã–±–µ—Ä–∏—Ç–µ –∫—É—Ä—Å –∏ –ø–µ—Ä–µ–π–¥–∏—Ç–µ –ø–æ —Å—Å—ã–ª–∫–µ!",
        buttonOurCourses
      );
    }

    if (data === "back") {
      return bot.sendMessage(
        chatId,
        "–ù–∏–∂–µ –ø—Ä–µ–¥—Å—Ç–∞–≤–ª–µ–Ω–∞ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è: –æ –∫–æ–º–ø–∞–Ω–∏–∏, –Ω–∞—à–∏ –∫—É—Ä—Å—ã, –Ω–∞—à–∏ —Å–æ—Ü.—Å–µ—Ç–∏ üëáüëáüëá",
        buttons
      );
    }

    bot.sendMessage(chatId, `–ü–µ—Ä–µ–π–¥–∏—Ç–µ –ø–æ —Å—Å—ã–ª–∫–µ: ${data}`);
    console.log(msg);
  });
};

start();
